
@model PagedList.IPagedList<ErrorLoggerModel.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "AddUser";
}

<br />
<br />
<div style="margin-left:auto;margin-right:auto">
    <div class="mytitle">
        Add User
    </div>
</div>
<br />

@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            Mail ID
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.mailID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastname)
        </td>
        <td>
            @if (item.Status)
            {
                <p>Active</p>
            }
            else
            {
                <p>Inactive</p>
            }
         @*   @Html.DisplayFor(modelItem => item.Status)*@
        </td>
        @if (item.Status)
        {
        <td>
            @Html.ActionLink("Add", "Add", "Admin", new { userid = item.UserId }, null) 
        </td>
        }
        else
        {
            <td></td>
           // <td><text>Inactive</text></td>
        }
    </tr>
}
</table>
}
else
{
<h3> No Users </h3>
}
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("AddUser",
                                    new { appid = ViewBag.Application, page }))